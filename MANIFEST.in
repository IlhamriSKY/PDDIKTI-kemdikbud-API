# Include essential files
include README.md
include requirements.txt

# Exclude test files and development files
exclude tests/*
exclude run_tests.py
exclude testing.py
exclude app.py
exclude pytest.ini
exclude .gitignore
exclude CONTRIBUTING.md
exclude TESTING.md

# Exclude development and build directories
recursive-exclude tests *
recursive-exclude build *
recursive-exclude dist *
recursive-exclude *.egg-info *
recursive-exclude __pycache__ *
recursive-exclude .pytest_cache *

# Exclude version control and IDE files
exclude .git*
exclude .vscode*
exclude .idea*
exclude *.pyc
exclude *.pyo
exclude *.pyd
exclude .DS_Store
exclude Thumbs.db
